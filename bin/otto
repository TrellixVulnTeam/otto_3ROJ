import logging
logger = logging.getLogger(__name__)
logging.captureWarnings(True)
import os
import sys

OTTOLIB = os.path.abspath(os.path.dirname(sys.path[0]))
if os.path.isdir(OTTOLIB):
    sys.path.insert(0, OTTOLIB)

from ottolib.utils import exit_missing_imports

# Check requirements
exit_missing_imports('lxc', 'python3-lxc')

from ottolib import commands


if __name__ == "__main__":

    cmd = commands.Commands()
    if cmd.run is None:
        sys.exit(1)

    sys.exit(cmd.run())
