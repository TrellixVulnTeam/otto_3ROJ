import logging
import os
import sys

OTTOLIB = os.path.normpath(os.path.join(sys.path[0], ".."))
if os.path.isdir(OTTOLIB):
    sys.path.insert(1, OTTOLIB)

from ottolib import commands


class Otto(object):
    """ Main class
    """
    def __init__(self):
        """ Constructor
        """
        # Root privileges required to handle LXC containers
        if os.getuid() != 0:
            logging.error("You must have root privileges to run this "
                          "script.  ")
            sys.exit(1)

        self.cmds = commands.Commands()

    def main(self):
        """ Main routine
        """
        logging.debug('Main')
        if self.cmds.run is not None:
            return self.cmds.run()
        else:
            return 1


if __name__ == "__main__":
    OTTO = Otto()
    sys.exit(OTTO.main())
